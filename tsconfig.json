{
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "downlevelIteration": true,
    "types": ["node", "mocha"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@lib/logger": [
        "libs/logger/src"
      ],
      "@lib/logger/*": [
        "libs/logger/src/*"
      ],
      "@lib/utils": [
        "libs/utils/src"
      ],
      "@lib/utils/*": [
        "libs/utils/src/*"
      ]
    }
  }
}
